<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/neutral_01</item>
        <item name="colorPrimaryDark">@color/neutral_02</item>
        <item name="colorAccent">@color/accent</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="ToolbarHeader"  parent="Widget.MaterialComponents.Toolbar">
        <item name="elevation">2dp</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="colorOnPrimary">@color/primary_01</item>
    </style>


    <!--MATERIAl DATEPICKER-->

    <!--Header Title-->
    <style name="HeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Header panel -->
    <style name="HeaderPanel" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/date_picker_header_background</item>
    </style>

    <!-- Header selected date -->
    <style name="HeaderSelectedDate" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Switch-to-keyboard input icon-->
    <style name="SwitchToKeyboardInputIcon" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:background">@color/date_picker_header_background</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!--Year selection menu-->
    <style name="YearSelectionMenu" parent="Widget.MaterialComponents.MaterialCalendar.YearNavigationButton">
        <item name="android:textColor">@color/neutral_01</item>
        <item name="iconTint">@color/neutral_01</item>
    </style>

    <!--Month pagination-->
    <style name="MonthPagination" parent="Widget.MaterialComponents.MaterialCalendar.MonthNavigationButton">
        <item name="android:textColor">@color/neutral_01</item>
        <item name="iconTint">@color/neutral_01</item>
    </style>

    <!--Day of week-->
    <style name="DatePickerThemeDarkOverlay" parent="">
        <item name="android:textColor">@color/neutral_01</item>
    </style>

    <!--Past day-->
    <style name="Widget.MaterialComponents.MaterialCalendar.Day.Invalid">
        <item name="itemTextColor">@color/neutral_01</item>
    </style>

    <!--Current date-->
    <style name="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemStrokeColor">@color/neutral_01</item>
    </style>

    <!--Day style-->
    <style name="Widget.MaterialComponents.MaterialCalendar.Item">
        <item name="itemFillColor">@android:color/transparent</item>
        <item name="itemTextColor">@color/text</item>
        <item name="itemStrokeColor">@color/mtrl_calendar_item_stroke_color</item>
        <item name="itemStrokeWidth">1dp</item>
        <item name="itemShapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    </style>

    <!-- Day selected -->
    <style name="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/primary_01</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeWidth">0dp</item>
    </style>
    <!--========================-->

    <style name="SpaceAppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button_background_state_color_selector</item>
        <item name="rippleColor">@color/accent_active</item>
<!--        <item name="fontFamily">@font/poppins_semibold</item>-->
        <item name="android:textSize">16sp</item>
<!--        <item name="android:paddingVertical">9dp</item>-->
    </style>

    <style name="SpaceAppTransparentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary_01</item>
<!--        <item name="fontFamily">@font/poppins_medium</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:background">@drawable/transparent_button_ripple_effect</item>
    </style>

</resources>
